!!! 5
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}
		%meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
		%meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
		/ The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
		%meta{:content => "", :name => "description"}
		%meta{:content => "", :name => "author"}
		%title HotS Roster
		= favicon_link_tag('favicon_16.png', type: 'image/png', sizes: '16x16')
		= favicon_link_tag('favicon_24.png', type: 'image/png', sizes: '24x24')
		= favicon_link_tag('favicon_32.png', type: 'image/png', sizes: '32x32')
		= favicon_link_tag('favicon_48.png', type: 'image/png', sizes: '48x48')
		= favicon_link_tag('favicon_64.png', type: 'image/png', sizes: '64x64')
		= favicon_link_tag('favicon_96.png', type: 'image/png', sizes: '96x96')
		= favicon_link_tag('favicon_128.png', type: 'image/png', sizes: '128x128')
		= favicon_link_tag('favicon_192.png', type: 'image/png', sizes: '192x192')
		= favicon_link_tag('favicon_256.png', type: 'image/png', sizes: '256x256')
		= favicon_link_tag('favicon_512.png', type: 'image/png', sizes: '512x512')
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		= render(partial: 'layouts/navigation')
		= yield

